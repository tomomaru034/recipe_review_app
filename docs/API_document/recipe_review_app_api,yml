openapi: 3.0.0
info:
  title: Recipe Review App API
  version: 1.0.0
  description: レシピ記録アプリ API仕様
servers:
  - url: http://localhost:3000
    description: Localサーバ

paths:
  /recipes/{user_id}:
    get:
      summary: レシピ情報取得
      description: レシピ情報取得
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/DailyRecipeList'
    post:
      summary: レシピ新規登録
      description: レシピ新規登録
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Recipe'
      responses:
        '201':
          description: OK

  /recipes/{user_id}/{recipe_id}:
    get:
      summary: レシピ詳細取得
      description: レシピ詳細取得
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: recipe_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Recipe'
    put:
      summary: レシピ詳細更新
      description: レシピ詳細更新
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Recipe'
      responses:
        '200':
          description: OK
    delete:
      summary: レシピ削除
      description: レシピ削除
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '204':
          description: OK

  /recipes/{user_id}/recipe_reviews:
    get:
      summary: レシピレビュー情報取得
      description: レシピレビュー情報取得
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/RecipeReview'

components:
  schemas:
    DailyRecipeList:
      type: object
      properties:
        id:
          type: integer
        date:
          type: string
        meal_type:
          type: string
        recipes:
          type: array
          items:
            $ref: "#/components/schemas/Recipe"
          description: レシピ詳細
      description: 日別レシピ一覧

    Recipe:
      type: object
      properties:
        id:
          type: integer
        calendar_entry_id:
          type: integer
        title:
          type: string
        description:
          type: string
        recipe_url:
          type: string
        recipe_reviews:
          type: array
          items:
            $ref: "#/components/schemas/Review"
          description: レシピレビュー
        recipe_assets:
          type: array
          items:
            $ref: "#/components/schemas/Asset"
          description: レシピ関連情報
      description: レシピ詳細情報

    Review:
      type: object
      properties:
        id:
          type: integer
        recipe_id:
          type: integer
        rating:
          type: integer
      description: レシピレビュー

    Asset:
      type: object
      properties:
        id:
          type: integer
        recipe_id:
          type: integer
        img_url:
          type: string
      description: レシピ関連情報

    RecipeReview:
      type: object
      properties:
        id:
          type: integer
        recipe_id:
          type: integer
        title:
          type: string
        rating:
          type: integer
        img_url:
          type: string
      description: レシピレビューサムネイル