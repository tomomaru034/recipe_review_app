openapi: 3.0.0
info:
  title: Recipe Review App API
  version: 1.0.0
  description: レシピ記録アプリ API仕様
servers:
  - url: http://localhost:3001
    description: Localサーバ

paths:
  /recipes/{user_id}/{date}:
    get:
      summary: レシピ情報取得
      description: レシピ情報取得
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: date
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/DailyRecipeList'
              example:
                id: "1"
                title: "オムライス"
                meal_type: "morning"

  /recipes/{user_id}/{recipe_id}:
    get:
      summary: レシピ詳細取得
      description: レシピ詳細取得
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: recipe_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Recipe'
              example:
                id: "1"
                title: "オムライス"
                date: "2025-1-1"
                meal_type: "morning"
                recipe_url: "https://www.sirogohan.com/recipe/omuraisukihon/"
                description: ""
                Rate:
                  id: "1"
                  recipe_id: "1"
                  rate: "5"
                Assets:
                  id: "1"
                  recipe_id: "1"
                  img_url: "https://www.sirogohan.com/_files/recipe/images/omuraisu/omuraisu9142.JP※S3上の画像パス"

    put:
      summary: レシピ詳細更新
      description: レシピ詳細更新
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: recipe_id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Recipe'
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Recipe'
              example:
                id: "1"
                title: "オムライス"
                date: "2025-1-1"
                meal_type: "morning"
                recipe_url: "https://www.sirogohan.com/recipe/omuraisukihon/"
                description: ""
                Rate:
                  id: "1"
                  recipe_id: "1"
                  rate: "5"
                Assets:
                  id: "1"
                  recipe_id: "1"
                  img_url: "https://www.sirogohan.com/_files/recipe/images/omuraisu/omuraisu9142.JP※S3上の画像パス"

    post:
      summary: レシピ新規登録
      description: レシピ新規登録
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: recipe_id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Recipe'
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Recipe'
              example:
                id: "1"
                title: "オムライス"
                date: "2025-1-1"
                meal_type: "morning"
                recipe_url: "https://www.sirogohan.com/recipe/omuraisukihon/"
                description: ""
                Rate:
                  id: "1"
                  recipe_id: "1"
                  rate: "5"
                Assets:
                  id: "1"
                  recipe_id: "1"
                  img_url: "https://www.sirogohan.com/_files/recipe/images/omuraisu/omuraisu9142.JP※S3上の画像パス"

    delete:
      summary: レシピ削除
      description: レシピ削除
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
        - name: recipe_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '204':
          description: OK

  /recipes/{user_id}/recipe_reviews:
    get:
      summary: レシピレビュー情報取得
      description: ランキング画面表示用データ
      parameters:
        - name: user_id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/RecipeReview'
              example:
                id: "1"
                title: "オムライス"
                rate: "5"
                img_url: "https://www.sirogohan.com/_files/recipe/images/omuraisu/omuraisu9142.JP※S3上の画像パス"

components:
  schemas:
    DailyRecipeList:
      type: object
      properties:
        id:
          type: integer
        date:
          type: string
        title:
          type: string
        meal_type:
          type: string
      description: 日別レシピ一覧

    Recipe:
      type: object
      properties:
        id:
          type: integer
        calendar_entry_id:
          type: integer
        title:
          type: string
        description:
          type: string
        recipe_url:
          type: string
        Rate:
          type: array
          items:
            $ref: "#/components/schemas/Rate"
          description: レシピレビュー
        Asett:
          type: array
          items:
            $ref: "#/components/schemas/Asset"
          description: レシピ関連情報
      description: レシピ詳細情報

    Rate:
      type: object
      properties:
        id:
          type: integer
        recipe_id:
          type: integer
        rate:
          type: integer
      description: レシピレビュー

    Asset:
      type: object
      properties:
        id:
          type: integer
        recipe_id:
          type: integer
        img_url:
          type: string
      description: レシピ関連情報

    RecipeReview:
      type: object
      properties:
        id:
          type: integer
        title:
          type: string
        rate:
          type: integer
        img_url:
          type: string
      description: ランキング画面レシピサムネイル